// prisma/schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Order {
  id        String      @id @default(uuid())
  clientId  String
  statusId  String
  total     Float
  isDeleted Boolean     @default(false)
  items     OrderItem[]
  status    Status      @relation(fields: [statusId], references: [id])
  createdAt DateTime    @default(now())
}

model OrderItem {
  id        String   @id @default(uuid())
  order     Order    @relation(fields: [orderId], references: [id])
  orderId   String
  productId String
  productName String
  quantity  Int
  unitPrice Float
  subtotal  Float
}

model Status {
  id     String  @id @default(uuid())
  name   String  @unique
  orders Order[]
}