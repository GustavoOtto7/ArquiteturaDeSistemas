// prisma/schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id       String      @id @default(uuid())
  name     String      @unique
  price    Float
  stock    Int
  isDeleted Boolean    @default(false)
  createdAt DateTime   @default(now())
}